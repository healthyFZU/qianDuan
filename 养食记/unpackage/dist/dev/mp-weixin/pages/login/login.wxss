
/* 容器样式 */
.login-container.data-v-e4e4508d {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #ffffff;
  height: 100%;
  justify-content: center;
}

/* Logo 和标题样式 */
.logo.data-v-e4e4508d {
  width: 100%;
  margin-bottom: 50px;
  position: relative;
  bottom: 110px;
  transform: scale(1.4);
}
.logo-image.data-v-e4e4508d {
  width: 80px;
  height: 80px;
  margin-bottom: 10px;
}
.title.data-v-e4e4508d {
  font-size: 24px;
  font-weight: bold;
  color: #8b4513;
}

/* 输入框组样式 */
.input-group.data-v-e4e4508d {
  display: flex;
  align-items: center;
  width: 80%;
  padding: 10px 15px;
  background-color: #f8f8f8;
  border: 1px solid #e0e0e0;
  border-radius: 25px;
  margin-bottom: 32px;
  box-sizing: border-box;
  position: relative;
  bottom: 85px;
}
.icon.data-v-e4e4508d {
  font-size: 18px;
  color: #f45b6c;
  margin-right: 10px;
}
input.data-v-e4e4508d {
  flex: 1;
  border: none;
  outline: none;
  font-size: 14px;
  background-color: transparent;
}

/* 登录按钮样式 */
.login-button.data-v-e4e4508d {
  width: 80%;
  height: 45px;
  background-color: #50cc8e;
  color: black;
  border: none;
  border-radius: 25px;
  font-size: 16px;
  text-align: center;
  cursor: pointer;
  margin-top: 10px;
  position: relative;
  bottom: 90px;
}
.login-button.data-v-e4e4508d:hover {
  background-color: #45b97c;
}

/* 底部链接样式 */
.footer-links.data-v-e4e4508d {
  display: flex;
  justify-content: space-between;
  width: 80%;
  margin-top: 20px;
  position: relative;
  bottom: 90px;
}
.register-link.data-v-e4e4508d,
.forgot-password-link.data-v-e4e4508d {
  color: #3590f1;
  font-size: 14px;
  text-decoration: none;
}
.register-link.data-v-e4e4508d:hover,
.forgot-password-link.data-v-e4e4508d:hover {
  text-decoration: underline;
}
